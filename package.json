{
  "name": "gfa",
  "module": "src/gfa.ts",
  "type": "module",
  "scripts": {
    "lint": "prettier ./src --check",
    "lint:fix": "prettier ./src --write",
    "dev": "ts-node ./src/gfa",
    "test": "ts-node ./src/test",
    "clean": "rm -rf ./build && rm -f ./dist",
    "dist": "run-s build deploy",
    "deploy": "cp ./dist/gfa $HOME/bin/",
    "build": "run-s build:bundle build:shebang build:executable",
    "build:bundle": "esbuild ./src/gfa.ts --bundle --platform=node --target=node20.9 --minify --tree-shaking=true --outdir=./build",
    "build:shebang": "node -e \"const fs = require('fs'); fs.writeFileSync('./dist/gfa', fs.readFileSync('./src/prolog.txt', 'utf-8') + fs.readFileSync('./build/gfa.js', 'utf-8'));\"",
    "build:executable": "node -e \"const fs = require('fs'); fs.chmodSync('./dist/gfa', 0o755);\""
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "esbuild": "0.21.5",
    "npm-run-all": "^4.1.5",
    "prettier": "3.3.2",
    "ts-node": "^10.9.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "ansi-escapes": "^7.0.0",
    "ansi-styles": "^6.2.1"
  }
}

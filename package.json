{
  "name": "gfa",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "lint": "prettier . --check",
    "lint:fix": "prettier . --write",
    "dev": "bun run ./index.ts",
    "test": "bun run ./test.ts",
    "clean": "rm -rf ./build && rm -f ./gfa",
    "dist": "run-s bundle install",
    "install": "cp gfa $HOME/bin/",
    "bundle": "run-s build build:shebang build:executable",
    "build": "bun build ./index.ts --outdir ./build --target node --minify",
    "build:shebang": "bun -e \"const fs = require('fs'); fs.writeFileSync('./gfa', fs.readFileSync('./prolog.txt', 'utf-8') + fs.readFileSync('./build/index.js', 'utf-8'));\"",
    "build:executable": "bun -e \"const fs = require('fs'); fs.chmodSync('./gfa', 0o755);\""
  },
  "devDependencies": {
    "@types/bun": "latest",
    "npm-run-all": "^4.1.5",
    "prettier": "3.3.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "ansi-escapes": "^7.0.0",
    "ansi-styles": "^6.2.1"
  }
}

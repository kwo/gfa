{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "es2022",
    "moduleResolution": "bundler",
    "outDir": "build",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es2023",
    "types": [
      "node",
      "react"
    ],
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2023"
    ],
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/*.ts",
    "src/*.tsx"
  ]
}

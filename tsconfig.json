{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "es2022",
    "moduleResolution": "bundler",
    "outDir": "build",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es2022",
    "types": ["node"]
  },
  "exclude": ["node_modules"],
  "include": ["src/*.ts"]
}
